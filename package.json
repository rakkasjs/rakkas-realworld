{
	"name": "rakkas-realworld-demo",
	"private": true,
	"version": "0.0.1",
	"description": "Rakkas RealWorld demo",
	"scripts": {
		"dev": "dotenv rakkas dev",
		"build": "prisma generate && rakkas build",
		"build:cloudflare-workers": "PRISMA_CLIENT_ENGINE_TYPE='dataproxy' prisma generate && rakkas build -d cloudflare-workers",
		"build:netlify": "PRISMA_CLIENT_ENGINE_TYPE='dataproxy' prisma generate && rakkas build -d netlify",
		"vercel-build": "PRISMA_CLIENT_ENGINE_TYPE='dataproxy' prisma generate && rakkas build -d vercel",
		"configure": "dotenv node configure.js",
		"start": "dotenv node dist/server",
		"test": "pnpm test:unit && NODE_ENV=test start-server-and-test 'pnpm build && pnpm start' :3000/api/test/ping 'pnpm test:api && pnpm test:e2e'",
		"test:unit": "jest",
		"test:api": "jest --config jest-api-test.config.json --maxWorkers=1 api-test",
		"test:e2e": "cypress run",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint:ts": "eslint --max-warnings=0 src",
		"lint:css": "stylelint \"src/**/*.css\"",
		"format": "prettier . --write",
		"prepack": "pnpm build"
	},
	"files": [
		"configure.js",
		"dist",
		"prisma"
	],
	"dependencies": {
		"@prisma/client": "^3.5.0",
		"@tsndr/cloudflare-worker-jwt": "^1.1.5",
		"bcrypt": "^5.0.1",
		"cookie": "^0.4.1",
		"dotenv-cli": "^4.1.0",
		"find-free-port": "^2.0.0",
		"http-status-codes": "^2.1.4",
		"jose": "^4.3.7",
		"jsonwebtoken": "^8.5.1",
		"prisma": "^3.5.0",
		"rakkasjs": "v0.5.0-canary.15",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-helmet-async": "^1.1.2",
		"react-markdown": "^7.1.0",
		"safe-compare": "^1.1.4",
		"slugify": "^1.6.2",
		"validator": "^13.7.0",
		"zod": "^3.11.6"
	},
	"devDependencies": {
		"@rakkasjs/cli": "v0.5.0-canary.15",
		"@testing-library/jest-dom": "^5.15.0",
		"@testing-library/react": "^12.1.2",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie": "^0.4.1",
		"@types/jest": "^27.0.2",
		"@types/jsonwebtoken": "^8.5.6",
		"@types/node": "^16.11.7",
		"@types/node-fetch": "^2.5.12",
		"@types/react": "^17.0.34",
		"@types/react-dom": "^17.0.11",
		"@types/safe-compare": "^1.1.0",
		"@types/set-cookie-parser": "^2.4.1",
		"@types/testing-library__jest-dom": "^5.14.1",
		"@types/validator": "^13.7.0",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"core-js": "^3.19.1",
		"cypress": "^9.0.0",
		"dotenv-load": "^2.0.0",
		"esbuild": "^0.13.13",
		"esbuild-jest": "^0.5.0",
		"esbuild-plugin-alias": "^0.2.1",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-typescript": "^2.5.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-only-warn": "^1.0.3",
		"eslint-plugin-react": "^7.27.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"jest": "^27.3.1",
		"jest-css-modules-transform": "^4.3.0",
		"node-fetch": "^2.6.6",
		"prettier": "^2.4.1",
		"set-cookie-parser": "^2.4.8",
		"start-server-and-test": "^1.14.0",
		"stylelint": "^14.1.0",
		"stylelint-config-css-modules": "^2.3.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^24.0.0",
		"stylelint-prettier": "^2.0.0",
		"typescript": "^4.4.4",
		"vite-tsconfig-paths": "^3.3.17"
	}
}
