{
	"compilerOptions": {
		"strict": true,
		"module": "ES2020",
		"lib": ["DOM", "DOM.Iterable", "ES2021"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",
		"target": "es6",
		"moduleResolution": "node",
		"types": ["vite/client", "node"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "api-test/**/*"]
}
